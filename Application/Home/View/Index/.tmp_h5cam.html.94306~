<script>
	//�ж�������Ƿ�֧��HTML5 Canvas 
	var canvas;
	var context;
	var video;
	var canvansData="";
	window.onload = function() {
		try {
			//��̬����һ��canvasԪ ������ȡ��2Dcontext���������쳣���ʾ��֧��
			document.createElement("canvas").getContext("2d");
			$("#support").html("�����֧��HTML5 CANVAS");
		} catch(e) {
			$("#support").html("�������֧��HTML5 CANVAS");
		}
